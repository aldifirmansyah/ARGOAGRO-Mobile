<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ARGOAGRO.Utils"
             x:Class="ARGOAGRO.Views.MainPage"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout>
            <StackLayout BackgroundColor="#69bf8d">
                <Image Source="{Binding LogoImg}"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand"
                       Margin="0,70"/>
            </StackLayout>

            <Frame BackgroundColor="#ffffff"
                   CornerRadius="10"
                   HasShadow="True"
                   BorderColor="#fefefe"
                   Margin="60,-40"
                   Padding="20">
                <Label Text="BELI SEKARANG"
                       FontSize="Large"
                       TextColor="Black"
                       HorizontalOptions="Center"/>
            </Frame>
            
            <StackLayout Orientation="Vertical"
                     HorizontalOptions="CenterAndExpand"
                     Padding="30,50,30,0"
                     BackgroundColor="#f9f9f9">

                <Label Text="APA ITU ARGOAGRO?"
                   FontAttributes="Bold"
                   FontSize="Medium"
                   TextColor="Black"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="Start"
                   Margin="0,0,0,10"/>

                <Label Text="{Binding Description}"
                       TextColor="Black"
                       FontSize="Small"
                       HorizontalOptions="FillAndExpand"
                       LineBreakMode="WordWrap"/>

                <Image Source="{Binding AnekaBuahImg}"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="EndAndExpand"
                       Margin="0,20,0,0"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
